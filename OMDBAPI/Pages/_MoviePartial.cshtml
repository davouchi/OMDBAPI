
@model OMDBAPI.ViewModels.OMDBResponseView


    <table class="table table-responsive table-bordered table-vcenter js-dataTable">
        <thead class="thead-dark">
            <tr>
                <th>ID</th>
                <th>Title</th>
                <th>Type</th>
                <th>Poster</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.OmdbResponse.Response == "True")
            {
                for (int i = 0; i < Model.OmdbResponse.Search.Count; i++)
                {
                    <tr>
                        <td class="d-sm-table-cell">
                            <p>@Model.OmdbResponse.Search[i].imdbID</p>
                        </td>

                        <td>
                            <p>@Model.OmdbResponse.Search[i].Title</p>
                        </td>
                        <td>
                            <p>@Model.OmdbResponse.Search[i].Type</p>
                        </td>
                        <td class="d-sm-table-cell font-size-sm">
                            <img height="250" width="250" src="@Model.OmdbResponse.Search[i].Poster" />
                        </td>
                    </tr>
                }
            }

        </tbody>
    </table>

    <script>
        $(document).ready(function () {
            $('.js-dataTable').DataTable({
                pageLength: 3,
                lengthMenu: !1,               
                autoWidth: true,
                "ordering": false,
                dom: "<'row'<'col-sm-12'tr>><'row'<'col-sm-6'i><'col-sm-6'p>>",
                "info": false,
                language: { "zeroRecords": " " }
            });
        });
    </script>

